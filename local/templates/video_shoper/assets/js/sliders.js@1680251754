$('.slider-action .count').text(i+','+i2+' из '+slick.slideCount);});$('.wishlist-wrap .slider-action .prev').on('click',function name(params){$wishSlider.slick('slickPrev');});$('.wishlist-wrap .slider-action .next').on('click',function name(params){$wishSlider.slick('slickNext');});appendDots($wishSlider);$wishSlider.slick({accessibility:false,slidesToShow:4,slidesToScroll:1,dots:false,infinite:true,speed:300,nextArrow:'<button class="slick-next"><i class="icon-CaretRight"></i></button>',prevArrow:'<button class="slick-prev"><i class="icon-CaretLeft"></i></button>',asNavFor:$wishSlider.siblings('.slick-dots'),responsive:[{breakpoint:1600,settings:{slidesToShow:4,},},{breakpoint:1023,settings:{slidesToShow:3,slidesToScroll:1,},},{breakpoint:767,settings:{slidesToShow:2,slidesToScroll:1,arrows:false,},},],});}
const $mainDetailSlick=$('.images-wrap .main-image');const $thumbsDetailSlick=$('.images-wrap .thumbs');if($mainDetailSlick.length){if($mainDetailSlick.find('.item').length>1){$mainDetailSlick.slick({accessibility:false,arrows:false,asNavFor:'.images-wrap .thumbs',centerMode:true,draggable:false,fade:true,slidesToScroll:1,slidesToShow:1,});if($thumbsDetailSlick.length){if($thumbsDetailSlick.find('.item').length>1){let toScroll=$thumbsDetailSlick.find('.item').length>5;$thumbsDetailSlick.slick({accessibility:false,arrows:false,asNavFor:'.images-wrap .main-image',centerMode:toScroll,centerPadding:'0',dots:false,focusOnSelect:true,slidesToScroll:1,slidesToShow:5,swipeToSlide:true,});$mainDetailSlick.on('afterChange',function(){let currentVideo=$mainDetailSlick.find('.slick-current .video-container .youtube-preloader');if(currentVideo.length){if(currentVideo.is('iframe')){currentVideo[0].contentWindow.postMessage('{"event":"command","func":"playVideo","args":""}','*');}else{currentVideo.click();}}});$mainDetailSlick.on('beforeChange',function(){$mainDetailSlick.find('.video-container iframe').each(function(){this.contentWindow.postMessage('{"event":"command","func":"stopVideo","args":""}','*');});});}else{$thumbsDetailSlick.hide();}}}else{$thumbsDetailSlick.hide();}}
