$(function(){'use strict';const $homeSlider=$('.home-slider');const $homeProdSlider=$('.home-prod-slider');if($homeSlider.length&&$homeProdSlider.length){$homeSlider.on('init',function(){equalizeHomeSliders($homeSlider,$homeProdSlider);});$homeProdSlider.on('init afterChange',function(){equalizeHomeSliders($homeSlider,$homeProdSlider);});$(window).resize(function(params){equalizeHomeSliders($homeSlider,$homeProdSlider);});}
